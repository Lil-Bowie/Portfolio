<% include partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Create a new Campground.</h1>

    <div style="width: 30%; margin: 25px auto;">
      <form action="/campground" method="post">
        <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="name">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="image url">
        </div>
        <div class="form-group">
            <textarea class="form-control" placeholder="description" name="description" rows="8" cols="80"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
        <a href="/campground">Go Back</a>
      </form>
    </div>

  </div>
</div>

<% include partials/footer %>
