<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Comment a Campground to <%= cg.name %>.</h1>

    <div style="width: 30%; margin: 25px auto;">
      <form action="/campground/<%= cg._id %>/comments" method="post">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="comment[author]" placeholder="author">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
        <a href="/campground">Go Back</a>
      </form>
    </div>

  </div>
</div>

<% include ../partials/footer %>
